{
  "name": "sisfac-desktop",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio SISFAC (Flask + Electron)",
  "main": "main.js",
  "scripts": {
    "start": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "dist": "electron-builder --linux AppImage"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.sisfac.desktop",
    "productName": "SISFAC",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "!node_modules/**/*"
    ],
    "asarUnpack": [
      "**/backend/**/*",
      "**/*.db"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "../sisfac.db",
        "to": "sisfac.db"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office",
      "icon": "build/icon.png",
      "executableName": "sisfac-desktop"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "afterPack": "./build/afterPack.js",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business",
      "icon": "build/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
