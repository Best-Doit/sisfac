{
  "name": "sisfac-desktop",
  "version": "1.0.0",
  "description": "Sistema de Facturación y Gestión de Inventario - AppImage Autónomo",
  "main": "main.js",
  "homepage": "https://github.com/sisfac/sisfac",
  "scripts": {
    "start": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "electron-builder --linux",
    "dist": "electron-builder --linux --publish never",
    "dist:deb": "electron-builder --linux deb --publish never",
    "dist:rpm": "electron-builder --linux rpm --publish never"
  },
  "author": {
    "name": "SISFAC",
    "email": "sisfac@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.sisfac.desktop",
    "productName": "SISFAC",
    "compression": "maximum",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asar": true,
    "asarUnpack": [],
    "extraResources": [
      {
        "from": "../backend/dist/sisfac-backend",
        "to": "backend/sisfac-backend"
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "icon": "build/icon.png",
      "executableName": "sisfac-desktop",
      "executableArgs": ["--no-sandbox", "--disable-setuid-sandbox", "--disable-zygote"],
      "synopsis": "Sistema de Facturación y Gestión de Inventario",
      "description": "Aplicación de escritorio para gestión de facturación, clientes e inventario. Totalmente autónoma, sin dependencias externas.",
      "desktop": {
        "Name": "SISFAC",
        "Comment": "Sistema de Facturación y Gestión de Inventario",
        "Categories": "Office;Finance;",
        "StartupNotify": "true",
        "Terminal": "false"
      }
    },
    "deb": {
      "depends": [],
      "category": "Office",
      "maintainer": "SISFAC <sisfac@example.com>",
      "afterInstall": "./build/postinst.sh"
    },
    "afterPack": "./build/afterPack.js",
    "afterAllArtifactBuild": "./build/afterAllArtifactBuild.js",
    "nsis": null,
    "dmg": null,
    "mac": null,
    "win": null
  }
}
